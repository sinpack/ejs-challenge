<%- include("partials/header"); -%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="New Title">
    <small id="emailHelp" class="form-text text-muted">Write a title for your post.</small>
  </div>
<div class="form-group">
  <label>Post</label>
  <textarea class="form-control" name="postBody" rows="5" cols="30"> </textarea>
  <small id="emailHelp" class="form-text text-muted">Write down your thoughts.</small>
</div>


<button class="btn btn-primary" type="submit" name="button">Publish</button>


</form>

<%- include("partials/footer"); -%>
